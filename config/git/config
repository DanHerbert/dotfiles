[core]
	editor = /usr/bin/vim
	# Treat spaces before tabs and all kinds of trailing whitespace as an error.
	# [default] trailing-space: looks for spaces at the end of a line
	# [default] space-before-tab: looks for spaces before tabs at the beginning of
	# a line
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[user]
	name = Dan Herbert
	signingkey = 01EAA5CE74DFD56C!
	useConfigOnly = true

[init]
	defaultBranch = main

[diff]
	colorMoved = zebra

[fetch]
	# Remove remote branches locally when they're deleted from origin
	prune = true

[push]
	# Automatically figure out what remote branch a local branch should get pushed to
	default = matching

[advice]
	detachedHead = false

[color "status"]
	removed = 1 # Red
	added = 2 # Green
	changed = 3 # Yellow
	branch = 4 # Blue
	untracked = 249 # Gray
	nobranch = 196 # Very bright red
	unmerged = 208 # Very bright orange

[color "diff"]
	old = 1 # Red
	new = 2 # Green
	oldMoved = 88 # Deep-ish red
	newMoved = 34 # Different green
	oldMovedAlternative = 124 # Less deep-ish red
	newMovedAlternative = 76 # Slightly brigher green
	meta = 12 # Blue
	frag = 5 # Purple
	context = 247 # Gray

[alias]
	a = add
	au = add -u
	aa = add -A
	b = branch
	d = diff
	dc = diff --cached
	cm = commit
	co = checkout
	cob = checkout -b
	f = fetch
	fa = fetch --all
	pl = pull
	pla = pull --all
	ps = push
	psa = push --all

[include]
	path = ~/.config/git/untracked_config

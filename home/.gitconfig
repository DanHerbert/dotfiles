[core]
	editor = /usr/bin/vim

[user]
	name = Dan Herbert
	email = forgot-to-set-project-specific-contact-email@hrbrt.co

[init]
	defaultBranch = main

[diff]
	colorMoved = zebra

[advice]
	detachedHead = false

[color "status"]
	removed = 1 # Red
	added = 2 # Green
	changed = 3 # Yellow
	branch = 4 # Blue
	untracked = 8 # Gray
	nobranch = 196 # Very bright red
	unmerged = 208 # Very bright orange

[color "diff"]
	old = 1 # Red
	new = 2 # Green
	oldMoved = 88 # Deep-ish red
	newMoved = 34 # Different green
	oldMovedAlternative = 124 # Less deep-ish red
	newMovedAlternative = 76 # Slightly brigher green
	meta = 4 # Blue
	frag = 5 # Purple
	context = 8 # Gray

[alias]
	a = add
	b = branch
	d = diff
	dc = diff --cached
	cm = commit
	co = checkout
	f = fetch
	fa = fetch --all
	pl = pull
	ps = push

[include]
	path = ~/.gitconfig_untracked
